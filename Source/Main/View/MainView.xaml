<mui:ModernWindow x:Class="SRL.Main.View.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mui="http://firstfloorsoftware.com/ModernUI"
        mc:Ignorable="d"
        Title="MainView" IsTitleVisible="True"
        MinHeight="600" MinWidth="800"
        ContentSource="/View/Pages/HomeView.xaml"
        DataContext="{Binding Source={StaticResource Locator}, Path=Main}">
    
    <!-- Unfortunately, DefaultResxName attribute does not work within another 
    markup extension (mui namespace). It works in page xamls though, so no 
    worries lads. -->

    <mui:ModernWindow.MenuLinkGroups>
        <mui:LinkGroup DisplayName="{Resx ResxName=SRL.Main.View.Localization.MainView, Key=homeDisplayName}">
            <mui:LinkGroup.Links>
                <mui:Link Source="/View/Pages/HomeView.xaml"/>
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
        <mui:LinkGroup DisplayName="{Resx ResxName=SRL.Main.View.Localization.MainView, Key=setupDisplayName}">
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="{Resx ResxName=SRL.Main.View.Localization.MainView, Key=mapEditorDisplayName}"
                          Source="/View/Pages/MapEditorView.xaml"/>
                <mui:Link DisplayName="{Resx ResxName=SRL.Main.View.Localization.MainView, Key=vehicleEditorDisplayName}"
                          Source="/View/Pages/VehicleEditorView.xaml"/>
                <mui:Link DisplayName="{Resx ResxName=SRL.Main.View.Localization.MainView, Key=tracingDisplayName}"
                          Source="/View/Pages/TracingView.xaml"/>
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
        <mui:LinkGroup DisplayName="{Resx ResxName=SRL.Main.View.Localization.MainView, Key=runDisplayName}">
            <mui:LinkGroup.Links>
                <mui:Link Source="/View/Pages/SimulationView.xaml"/>
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
    </mui:ModernWindow.MenuLinkGroups>

    <mui:ModernWindow.TitleLinks>
        <mui:Link DisplayName="{Resx ResxName=SRL.Main.View.Localization.MainView, Key=settingsDisplayName}"
                  Source="/View/Pages/SettingsView.xaml"/>
    </mui:ModernWindow.TitleLinks>
    
</mui:ModernWindow>
