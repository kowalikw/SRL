<Window x:Class="SRL.Main.ChooseLanguageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SRL.Main"
        mc:Ignorable="d"
        Title="ChooseLanguageWindow" Height="180" Width="300">
    <Grid>
        <StackPanel>
            <Label Margin="3" FontWeight="Bold" FontSize="16">Wybierz język:</Label>
            <Button x:Name="btnPolish" Height="40" Margin="5" Click="btnPolish_Click">Polski</Button>
            <Button x:Name="btnEnglish" Height="40" Margin="5" Click="btnEnglish_Click">English</Button>
        </StackPanel>
    </Grid>
</Window>
